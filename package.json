{
  "name": "personal-vault",
  "description": "Personal Vault",
  "author": "Mehmet GÃ¶k",
  "license": "MIT",
  "homepage": "https://github.com/meetgok/personal-vault",
  "repository": {
    "type": "git",
    "url": "https://github.com/meetgok/personal-vault.git"
  },
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run vite:dev\" \"npm run electron:dev\"",
    "vite:dev": "vite",
    "electron:dev": "cross-env IS_DEV=true electron .",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.meetgok.personalvault",
    "productName": "Personal Vault",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.0.0"
  }
}